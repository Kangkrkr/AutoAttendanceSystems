<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp">

    <RelativeLayout
        android:id="@+id/attendance_informaion_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/grade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:text="학년"/>
        <TextView
            android:id="@+id/class_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/grade_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="3dp"
            android:text="학번"/>
        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/class_number_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="3dp"
            android:text="이름"/>

        <RelativeLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <com.rey.material.widget.Button
                android:id="@+id/attendance"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:text="출석"
                android:background="#ffffff"
                style="@style/Material.Widget.FloatingActionButton.Mini.Light"
                app:rd_delayClick="none"
                app:rd_rippleType="wave"
                app:rd_maxRippleRadius="match_view"
                app:rd_rippleColor="#ff23ff10"
                app:rd_backgroundAnimDuration="1500"
                app:rd_padding="0dp"
                android:tag="0"/>

            <com.rey.material.widget.Button
                android:id="@+id/lateness"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_toRightOf="@id/attendance"
                android:text="지각"
                android:background="#ffffff"
                style="@style/Material.Widget.FloatingActionButton.Mini.Light"
                app:rd_delayClick="none"
                app:rd_rippleType="wave"
                app:rd_maxRippleRadius="match_view"
                app:rd_rippleColor="#ffe9ff0d"
                app:rd_backgroundAnimDuration="1500"
                app:rd_padding="0dp"
                android:tag="0"/>

            <com.rey.material.widget.Button
                android:id="@+id/absence"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:textSize="8dp"
                android:layout_toRightOf="@id/lateness"
                android:text="결석"
                android:background="#ffffff"
                style="@style/Material.Widget.FloatingActionButton.Mini.Light"
                app:rd_delayClick="none"
                app:rd_rippleType="wave"
                app:rd_maxRippleRadius="match_view"
                app:rd_rippleColor="#ffff3a02"
                app:rd_backgroundAnimDuration="1500"
                app:rd_padding="0dp"
                android:tag="0"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>