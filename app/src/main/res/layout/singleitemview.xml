<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:id="@+id/singleitemview">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:id="@+id/classroomwrap">
    <TextView
        android:id="@+id/classroomlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classroomlabel"
        android:layout_alignBaseline="@+id/classroom"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/classroomlabel"
        android:textSize="30dp"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/statelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classroomwrap"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/line"
        android:background="#0b4c74"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/state"/>

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/gridview_classroom"
        android:numColumns="6"
        android:stretchMode="columnWidth"
        android:layout_below="@+id/line"
        android:horizontalSpacing="-1dp"
        android:verticalSpacing="-1dp"
        android:padding="1dp">

    </GridView>

</RelativeLayout>
