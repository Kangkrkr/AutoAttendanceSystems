                    android:layout_toLeftOf="@+id/notice_title3"
                    android:background="#ff009999"/>
                <TextView
                    android:id="@+id/notice_title3"
                    android:layout_toRightOf="@+id/lecture_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="공지 제목"/>

                <TextView
                    android:id="@+id/writer3"
                    android:layout_below="@+id/lecture_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="글쓴이"/>

                <TextView
                    android:id="@+id/date3"
                    android:layout_toRightOf="@+id/writer3"
                    android:layout_alignStart="@+id/notice_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:layout_alignBaseline="@+id/writer3"
                    android:text="날짜" />




            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/line3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ff009999"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/noticebanner3e"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
