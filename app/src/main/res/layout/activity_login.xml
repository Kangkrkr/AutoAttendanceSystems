<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/loginbg">


    <com.material.widget.FloatingEditText
        android:id="@+id/id"
        android:hint="아이디"
        widget:floating_edit_text_color="#0b4c74"
        android:textColor="#5ac4ec"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.material.widget.FloatingEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:hint="비밀번호"
        widget:floating_edit_text_color="#0b4c74"
        android:textColor="#5ac4ec"
        android:layout_below="@+id/id"
        android:layout_centerHorizontal="true" />

    <com.rey.material.widget.Button
        android:id="@+id/login_button"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="로그인"
        android:textColor="#fff"
        android:background="@drawable/loginbtnbg"
        style="@style/Material.Widget.FloatingActionButton.Mini.Light"
        app:rd_delayClick="none"
        app:rd_rippleType="wave"
        app:rd_maxRippleRadius="match_view"
        app:rd_rippleColor="#ff2dffc2"
        app:rd_backgroundAnimDuration="1500"
        app:rd_padding="0dp" />

</RelativeLayout>
