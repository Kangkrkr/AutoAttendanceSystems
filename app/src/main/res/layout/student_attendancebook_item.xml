<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/professor_listitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#9ac0e3"
        android:padding="10dp">

        <TextView
            android:id="@+id/class_list_profname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교수님 성함"
            android:textSize="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/st_class_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="과목명"
            android:layout_marginTop="25dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#9ac0e3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/class_list_bt_attendance"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentStart="true"
                android:background="#72d279"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/class_list_bt_lateness"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_centerHorizontal="true"
                android:background="#f8ef89"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/class_list_bt_absence"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_alignParentEnd="true"
                android:background="#f88989"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
